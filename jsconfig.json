{
  "compilerOptions": {
    "target": "es2015",
    "module": "es6",
    "baseUrl": "./src/",
    "paths": {
      "*": ["*"],
      "assets/*": ["./src/assets/*"],
      "components/*": ["./src/components/*"],
      "gql/*": ["./src/gql/*"],
      "models/*": ["./src/models/*"],
      "pages/*": ["./src/pages/*"],
      "utils/*": ["./src/utils/*"]
    }
  },
  "exclude": ["node_modules", "public"]
}
